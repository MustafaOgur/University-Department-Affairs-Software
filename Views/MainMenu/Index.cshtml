@{
    Layout = "_MenuLayout";
    ViewData["CSS"] = "/css/MainMenu.css";
}


    <div class="container">
        <div class="left"></div>

        <div class="center">
            <div class="selection-box">
                <div id="row-1">
                    <form asp-controller="MainMenu" asp-action="DisplaySchedules" method="get">
                        <button class="selection-btn">Ders Programlarını Görüntüle</button>
                    </form>
                </div>
                <div id="row-2">
                    <form asp-controller="MainMenu" asp-action="AddSchedule" method="get">
                        <button class="selection-btn">Yeni Ders Programı Oluştur</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="right"></div>
    </div>